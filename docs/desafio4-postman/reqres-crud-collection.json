{
    "info": {
        "_postman_id": "reqres-crud-collection",
        "name": "Reqres CRUD",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://reqres.in/api"
        },
        {
            "key": "userId",
            "value": "2"
        }
    ],
    "item": [
        {
            "name": "POST - Create User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () { pm.response.to.have.status(201); });",
                            "const json = pm.response.json();",
                            "pm.test(\"Echoed name/job\", function () {\n    pm.expect(json.name).to.eql('morpheus');\n    pm.expect(json.job).to.eql('leader');\n});",
                            "pm.test(\"Has id and createdAt\", function () {\n    pm.expect(json).to.have.property('id');\n    pm.expect(json).to.have.property('createdAt');\n});",
                            "if (json.id) { pm.collectionVariables.set('userId', json.id); }"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"morpheus\",\n  \"job\": \"leader\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "users"
                    ]
                }
            }
        },
        {
            "name": "GET - Get Created User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                            "const json = pm.response.json();",
                            "pm.test(\"User id matches variable\", function () {\n    pm.expect(String(json.data.id)).to.eql(String(pm.collectionVariables.get('userId') || pm.variables.get('userId')));\n});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{baseUrl}}/users/{{userId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "users",
                        "{{userId}}"
                    ]
                }
            }
        },
        {
            "name": "PUT - Update User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                            "const json = pm.response.json();",
                            "pm.test(\"Updated job echoed\", function () {\n    pm.expect(json.job).to.eql('zion resident');\n});",
                            "pm.test(\"Has updatedAt\", function () {\n    pm.expect(json).to.have.property('updatedAt');\n});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"morpheus\",\n  \"job\": \"zion resident\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/users/{{userId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "users",
                        "{{userId}}"
                    ]
                }
            }
        },
        {
            "name": "DELETE - Remove User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 204\", function () { pm.response.to.have.status(204); });"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "DELETE",
                "url": {
                    "raw": "{{baseUrl}}/users/{{userId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "users",
                        "{{userId}}"
                    ]
                }
            }
        }
    ]
}